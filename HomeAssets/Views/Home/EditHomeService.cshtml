@model HomeService

@{
    ViewBag.Title = "Editar Servicio";
}

<h1 class="mt-3" style="font-family:Arial">Editar Servicio</h1>

<form class="mt-3" enctype="multipart/form-data" method="post">

    <input asp-for="Id" class="form-control" hidden />

    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="Location"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="Location"
                    asp-items="Html.GetEnumSelectList<Locations>()">
                <option value="Ubicación" selected="@Model.Location"></option>
            </select>
            <span class="text-danger" asp-validation-for="Location"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="ServiceType"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="ServiceType"
                    asp-items="Html.GetEnumSelectList<ServiceTypes>()">
                <option value="Tipo de Servicio" selected="@Model.ServiceType"></option>
            </select>
            <span class="text-danger" asp-validation-for="ServiceType"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="Institution"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="Institution"
                    asp-items="Html.GetEnumSelectList<Institutions>()">
                <option value="Institución" selected="@Model.Institution"></option>
            </select>
            <span class="text-danger" asp-validation-for="Institution"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="LeasedTo"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="LeasedTo"
                    asp-items="Html.GetEnumSelectList<Members>()">
                <option value="A nombre de" selected="@Model.LeasedTo"></option>
            </select>
            <span class="text-danger" asp-validation-for="LeasedTo"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="PaymentCriteria"></label>
        <div class="col-sm-10">
            <select class="custom-select" asp-for="PaymentCriteria"
                    asp-items="Html.GetEnumSelectList<PaymentCriterias>()">
                <option value="Criterio de pago" selected="@Model.PaymentCriteria"></option>
            </select>
            <span class="text-danger" asp-validation-for="PaymentCriteria"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label font-weight-bold" asp-for="PaymentId"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PaymentId" value="@Model.PaymentId" />
            <span class="text-danger" asp-validation-for="PaymentId"></span>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group row mt-5">
        <div class="col-sm-10 m">
            <button class="btn btn-primary" type="submit">Editar</button>
            <a class="btn btn-primary" onclick="history.go(-1)" style="color:white;">Cancelar</a>
        </div>
    </div>
</form>