@model int

@{
    ViewBag.Title = "404 Error";
}

    
<div class="alert alert-danger m-3">
    <h1 class="h4 mb-3">Error 404:</h1>
    <h2 class="h5">
        No se encontró el servicio con el ID especificado.
    </h2>
    <h3 class="h6 text-danger">
        ID = @Model
    </h3>
</div>
<a class="btn btn-outline-info ml-3" 
   asp-action="ListAll" asp-controller="Home" style="width: auto;">Listar Servicios</a>