@model IEnumerable<HomeService>

@{
    ViewBag.Title = "Details by Member";
}

@if (Model.Count() > 0)
{
    <h1 class="h3">Ubicación:</h1>
    <h2 class="h1">@Model.ElementAt(0).Location</h2>

    <div class="card-deck">
        @foreach (var homeService in Model)
        {
            <div class="card m-2" style="min-width:15rem; max-width:15rem;">
                <div class="card-header text-center">
                    @switch (homeService.ServiceType.ToString())
                    {
                        case "Internet":
                            <a class="text-decoration-none" style="color:black;" asp-controller="Home"
                               asp-action="ServiceDetail" asp-route-id="@homeService.Id">
                                <img src="~/images/internet.png" class="img-thumbnail rounded-circle"
                                     width="50" height="50" />
                                @homeService.ServiceType
                            </a>
                            break;
                        case "Agua":
                            <a class="text-decoration-none" style="color:black;" asp-controller="Home"
                               asp-action="ServiceDetail" asp-route-id="@homeService.Id">

                                <img src="~/images/agua.png" class="img-thumbnail rounded-circle"
                                     width="50" height="50" />
                                @homeService.ServiceType
                            </a>
                            break;
                        case "Energia_Electrica":
                            <a class="text-decoration-none" style="color:black;" asp-controller="Home"
                               asp-action="ServiceDetail" asp-route-id="@homeService.Id">
                                <img src="~/images/eElec.png" class="img-thumbnail rounded-circle"
                                     width="50" height="50" />
                                @homeService.ServiceType
                            </a>
                            break;
                        case "Gas_Domiciliario":
                            <a class="text-decoration-none" style="color:black;" asp-controller="Home"
                               asp-action="ServiceDetail" asp-route-id="@homeService.Id">
                                <img src="~/images/gDomic.png" class="img-thumbnail rounded-circle"
                                     width="50" height="50" />
                                @homeService.ServiceType
                            </a>
                            break;
                    }
                </div>
                <div class="card-body">
                    Ubicación: <div class="h6 d-inline">@homeService.Location</div><br />
                    Institución: <div class="h6 d-inline"> @homeService.Institution</div><br />
                    A nombre de: <div class="h6 d-inline">@homeService.LeasedTo</div><br />
                    @homeService.PaymentCriteria:
                    <div class="text-center h4">@homeService.PaymentId</div>
                </div>
            </div>
        }
    </div>}
else
{
    <h1 class="text-center m-4"> No existe ningun servicio registrado en esta ubicación</h1>
}
<a class="btn btn-primary m-2" asp-controller="home" asp-action="index"> Regresar</a>