@model CreateHomeService_vm
@{
    ViewBag.Title = "Crear Servicio";
}
    
    <form enctype="multipart/form-data" method="post" asp-controller="home" asp-action="create">
        <div>
            <label asp-for="ServiceType"></label>
            <div>
                <input asp-for="ServiceType" />
                <span asp-validation-for="ServiceType"></span>
            </div>
        </div>
        <div>
            <label asp-for="Institution"></label>
            <div>
                <input asp-for="Institution" />
                <span asp-validation-for="Institution"></span>
            </div>
        </div>
        <div>
            <label asp-for="LeasedTo"></label>
            <div>
                <input asp-for="LeasedTo" />
                <span asp-validation-for="LeasedTo"></span>
            </div>
        </div>
        <div>
            <label asp-for="PaymentCriteria"></label>
            <div>
                <input asp-for="PaymentCriteria" />
                <span asp-validation-for="PaymentCriteria"></span>
            </div>
        </div>
        <div>
            <label asp-for="PaymentId"></label>
            <div>
                <input asp-for="PaymentId" />
                <span asp-validation-for="PaymentId"></span>
            </div>
        </div>
        <div asp-validation-summary="All"></div>

        <div>
            <div>
                <button type="submit">Crear</button>
            </div>
        </div>
    </form>