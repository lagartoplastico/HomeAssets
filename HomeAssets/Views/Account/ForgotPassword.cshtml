@model ForgotPassword_vmodel

@{
    ViewBag.Title = "Olvidaste tu contraseña";
}

<h1 class="font-italic mt-3">Restablecer contraseña</h1>

<div class="row justify-content-center mt-2">
    <div class="col-4">
        <form method="post">
            <div class="text-danger mt-2" asp-validation-summary="All"></div>
            <div class="form-group">
                <label class="font-weight-bold" asp-for="Email"></label>
                <input class="form-control" placeholder="Email" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <button class="btn btn-primary my-2" type="submit" style="width: auto;">Enviar</button>
        </form>
    </div>
</div>