@model CreateAccount_vmodel

@{
    ViewBag.Title = "Create Account";
}

    <form class="mt-3" enctype="multipart/form-data" method="post" asp-controller="Account" asp-action="Register">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" asp-for="Username"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Nombre de usuario" asp-for="Username" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" asp-for="Email"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Correo Electrónico" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" asp-for="Password"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Contraseña" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label font-weight-bold" asp-for="ConfirmPassword"></label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Confirmar Contraseña" asp-for="ConfirmPassword" />
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>


        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group row mt-5">
            <div class="col-sm-10">
                <button class="btn btn-primary" type="submit">Registrar</button>
            </div>
        </div>
    </form>