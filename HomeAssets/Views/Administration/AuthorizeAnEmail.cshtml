@model AuthorizeAnEmail_vmodel
@{
    ViewBag.Title = "Autorizar correo";
}

<h1 class="mt-3" style="font-family:Arial">Autorizar nuevo correo</h1>
<p class="text-body text-center my-2" style="font-size:large;">Esto le permite al correo autorizado registrarse en la aplicación.</p>

<form class="mt-4" enctype="multipart/form-data" method="post">
    
    <div class="form-group row justify-content-center">
        <label class="col-sm-12 col-form-label font-weight-bold text-center" asp-for="Email"></label>
        <div class="col-sm-12 col-md-7 col-lg-6 col-xl-5">
            <input class="form-control" placeholder="Correo Electrónico" asp-for="Email" />
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>


    <div class="form-group row justify-content-center mt-2">
        <div class="col-auto">
            <button class="btn btn-primary" type="submit">Autorizar</button>
        </div>
    </div>
</form>