<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <link href="~/css/site.css" rel="stylesheet" />

        <link href="~/lib/bootstrap-4.3.1/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/bootstrap-4.3.1/js/bootstrap.js"></script>
        
        <script src="~/js/functions.js"></script>
    </environment>
    <environment exclude="Development">
        <link href="~/css/site.css" rel="stylesheet" />

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

        <script src="~/js/functions.js"></script>
    </environment>

    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-light navbar-light">
            <a asp-controller="home" asp-action="index" class="navbar-brand">
                <img src="~/images/logo.png" height="30" width="30" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item  mr-2">
                        <a asp-controller="home" asp-action="Index" class="nav-link">Inicio</a>
                    </li>
                    <li class="dropdown-divider"></li>
                    <li class="nav-item">
                        <a asp-controller="home" asp-action="ListAll" class="nav-link">Listar Todos</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="home" asp-action="Create" class="nav-link">Crear Nuevo</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="m-1">
            @RenderBody()
        </div>
    </div>
</body>
</html>